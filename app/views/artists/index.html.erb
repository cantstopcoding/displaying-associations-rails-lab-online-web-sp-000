<h1>Songs</h1>

<div><%= link_to 'Create Artist', new_artist_path %></div>
<br />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td>
          <%= link_to 'View', artist %> |
          <%= link_to 'Edit', edit_artist_path(artist) %> |
          <%= link_to 'Delete', artist, method: :delete, data: { confirm: 'For real?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

